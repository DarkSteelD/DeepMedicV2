[flake8]
max-line-length = 100
ignore = 
    E203,
    W503,
    E501,
    F401,
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .pytest_cache,
    .mypy_cache,
    build,
    dist,
    *.egg-info,
    .dvc,
    mlruns,
    mlartifacts,
    logs
per-file-ignores = 
    __init__.py:F401
    tests/*:F401,F811 